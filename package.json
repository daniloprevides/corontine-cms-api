{
  "name": "cooker-api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "export NODE_ENV=dev && nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:debug:break": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register src/main.ts",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand --config ./test/jest-e2e.json",
    "test:e2e": "export NODE_ENV=test && jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nest-modules/mailer": "^1.1.3",
    "@nestjs/common": "^6.10.14",
    "@nestjs/config": "^0.2.2",
    "@nestjs/core": "^6.10.14",
    "@nestjs/jwt": "^6.1.1",
    "@nestjs/platform-express": "^6.10.14",
    "@nestjs/swagger": "^4.2.7",
    "@nestjs/typeorm": "^6.3.1",
    "@types/uuid": "^7.0.0",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "dotenv-flow": "^3.1.0",
    "hbs": "^4.1.0",
    "mysql": "^2.18.1",
    "nestjs-typeorm-paginate": "^1.0.3",
    "node-request-context": "^1.0.5",
    "nodemailer": "^6.4.3",
    "reflect-metadata": "^0.1.13",
    "request": "^2.88.2",
    "rimraf": "^3.0.0",
    "rxjs": "^6.5.4",
    "sqlite3": "^4.1.1",
    "swagger-ui-express": "^4.1.3",
    "typeorm": "^0.2.22",
    "typeorm-test-transactions": "^1.9.0",
    "typeorm-transactional-cls-hooked": "^0.1.11"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.13.2",
    "@nestjs/schematics": "^6.8.1",
    "@nestjs/testing": "^6.10.14",
    "@types/expect-puppeteer": "^4.4.0",
    "@types/express": "^4.17.2",
    "@types/jest": "25.1.1",
    "@types/jest-environment-puppeteer": "^4.3.1",
    "@types/node": "^13.1.6",
    "@types/puppeteer": "^2.0.0",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^2.12.0",
    "@typescript-eslint/parser": "^2.12.0",
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.19.1",
    "jest": "^24.9.0",
    "jest-dev-server": "^4.4.0",
    "jest-puppeteer": "^4.4.0",
    "prettier": "^1.18.2",
    "puppeteer": "^2.1.1",
    "supertest": "^4.0.2",
    "ts-jest": "25.1.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.6.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^3.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
